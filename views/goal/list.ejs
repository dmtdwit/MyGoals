<% include ../layouts/header.ejs %>
<% include ../layouts/navbar.ejs %>

<style>
    .tabs .indicator {
        background-color: #0F5288 !important;
    }
</style>
<div id="logModal" class="modal" style="z-index: 10000; margin-top: 10%;">
    <form action="log" method="post">
        <div class="modal-content">
            <h4>Progress Update Log</h4>
                <input type="hidden" id="progressGoalId" name="progressGoalId">
                <input type="hidden" id="progressValue">
                <textarea class="materialize-textarea" id="progressRemark" name="progressRemark">
                </textarea>
                <label for="progressRemark">Remark</label>
        </div>
        <div class="modal-footer">
            <a href="#" class="modal-close waves-effect waves-green btn-flat red darken-1 white-text" onclick="$('#logModal').hide();">Cancel</a>
            <button class="modal-close waves-effect waves-green btn-flat dw-green-1 white-text" onclick="updateProgress()">Update</button>
        </div>
    </form>
</div>
<body class="bg">
<br><br>
<main>
    <div class="container-fluid">
        <br><br>
        <div class="row">
            <div class="col l12 s12 m12">
                <div class="card">
                    <div class="card-tabs">
                        <ul class="tabs tabs-fixed-width">
                            <li class="tab">
                                <a href="#organizational" class="center-align text-dw-blue-1">
                                    <span class="tab-header"> Organizational </span>
                                </a>
                            </li>
                            <li class="tab">
                                <a href="#personal" class="center-align text-dw-blue-1">
                                    <span class="tab-header"> Personal </span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-content">
                        <div id="organizational">
                            <div class="row">
                                <div class="col l12 s12 m12">
                                    <table>
                                        <thead>
                                        <th> S. No. </th>
                                        <th> Goal </th>
                                        <th> Set Date </th>
                                        <th> Status </th>
                                        <th> Deadline </th>
                                        <th> </th>
                                        </thead>
                                        <tbody>
                                        <% i = 1 %>
                                        <% goals.forEach(function (goal) {
                                            if(goal.goalType === "ORGANIZATIONAL") {
                                        %>
                                        <tr class="<% if(goal.goalStatus==="REJECTED"){%>red darken-5<% } else { %> dw-blue-5<% }%>" style="border-bottom: 0px">
                                            <td> <%= i++ %> </td>
                                            <td> <%= goal.goal %> </td>
                                            <td> <%= goal.setDate %> </td>
                                            <td> <%= goal.goalStatus %> </td>
                                            <td> <%= goal.deadline %> </td>
                                            <td> <i class="material-icons tooltipped" data-position="top" data-tooltip="Remarks">visibility</i> </td>
                                        </tr>
                                        <% if (goal.goalStatus !== "PENDING") { %>
                                        <% if (goal.goalStatus !== "REJECTED") { %>
                                        <tr>
                                            <td colspan="2">
                                                <b> Progress </b>
                                                <form>
                                                    <p class="range-field" style="margin-left: 5%; margin-right: 5%;">
                                                        <input type="range" class="tooltipped" data-position="right" data-tooltip="<%= goal.progress %>%"
                                                               id="progress<%= goal.id %>" value="<%= goal.progress %>" min="0" max="100"
                                                                <% if (goal.goalStatus === 'COMPLETED') {%> disabled <% }%>
                                                               onchange="logModal(<%= goal.id %>)"/>
                                                    </p>
                                                </form>
                                            </td>
                                            <td class="center-align">
                                                <a href="/goal/view-log?id=<%= goal.id %>"
                                                   class="btn btn-flat dw-green-1">
                                                    View Log
                                                </a>
                                            </td>
                                            <td colspan="2">
                                                <% if (goal.goalStatus === "COMPLETED") { %>
                                                <b> Award </b>
                                                <span id="awardIcon<%= goal.id %>"></span>
                                                <script type="text/javascript">
                                                    $(document).ready(function(){
                                                        getAward(<%= goal.id %>, <%= goal.AwardId %>);
                                                    });
                                                </script>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (goal.approvedDate) {%>
                                                <b> Approved Date </b>
                                                <%= goal.approvedDate %>
                                                <% } %>
                                            </td>
                                        </tr>
                                        <%
                                                    }
                                                }
                                            }
                                        }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div id="personal">
                            <div class="row">
                                <div class="col l12 s12 m12">
                                    <table>
                                        <thead>
                                        <th> S. No. </th>
                                        <th> Goal </th>
                                        <th> Set Date </th>
                                        <th> Status </th>
                                        <th> Deadline </th>
                                        <th> </th>
                                        </thead>
                                        <tbody>
                                        <% i = 1 %>
                                        <% goals.forEach(function (goal) {
                                        if(goal.goalType === "PERSONAL") {
                                        %>
                                        <tr class="<% if(goal.goalStatus==="REJECTED"){%>red darken-5<% } else { %> dw-blue-5<% }%>" style="border-bottom: 0px">
                                            <td> <%= i++ %> </td>
                                            <td> <%= goal.goal %> </td>
                                            <td> <%= goal.setDate %> </td>
                                            <td> <%= goal.goalStatus %> </td>
                                            <td> <%= goal.deadline %> </td>
                                            <td> <i class="material-icons tooltipped" data-position="top" data-tooltip="Remarks">visibility</i> </td>
                                        </tr>
                                        <% if (goal.goalStatus !== "PENDING") { %>
                                        <% if (goal.goalStatus !== "REJECTED") { %>
                                        <tr>
                                            <td colspan="2">
                                                <b> Progress </b>
                                                <form>
                                                    <p class="range-field" style="margin-left: 5%; margin-right: 5%;">
                                                        <input type="range" class="tooltipped" data-position="right" data-tooltip="<%= goal.progress %>"
                                                               id="progress<%= goal.id %>" value="<%= goal.progress %>" min="0" max="100"
                                                                <% if (goal.goalStatus === 'COMPLETED') {%> disabled <% }%>
                                                               onchange="logModal(<%= goal.id %>)"/>
                                                    </p>
                                                </form>
                                            </td>
                                            <td class="right-align">
                                                <a href="/goal/log/view?id=<%= goal.id %>"
                                                   class="btn btn-flat dw-green-1">
                                                    View Log
                                                </a>
                                            </td>
                                            <td colspan="2">
                                                <% if (goal.goalStatus === "COMPLETED") { %>
                                                <b> Award </b>
                                                <span id="awardIcon<%= goal.id %>"></span>
                                                <script type="text/javascript">
                                                    $(document).ready(function(){
                                                        getAward(<%= goal.id %>, <%= goal.AwardId %>);
                                                    });
                                                </script>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (goal.approvedDate) {%>
                                                <b> Approved Date </b>
                                                <%= goal.approvedDate %>
                                                <% } %>
                                            </td>
                                        </tr>
                                        <%
                                        }
                                        }
                                        }
                                        }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</main>
</body>
<% include ../layouts/footer.ejs %>
