<% include ../layouts/header.ejs %>
<% include ../layouts/navbar.ejs %>

<body class="bg">
<br><br>
<main>

    <div class="container">
        <div class="row">
            <div class="col l10 m10 s10 offset-s1 offset-m1 offset-l1">

                <div class="card">
                    <div class="card-tabs">
                        <ul class="tabs tabs-fixed-width">
                            <li class="tab dw-blue-1">
                                <a class="left-align white-text">
                                    Create new goal
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-content">
                        <div id="create">
                            <div class="row">

                                <form class="col s12" action="/goal/save" method="POST" autocomplete="off" onsubmit="return validateGoals();">
                                    <div class="row">

                                        <div class="input-field col l12 m12 s12">
                                            <i class="material-icons prefix">my_location</i>
                                            <input type="hidden" name="id" value="<%= sess.userId %>">
                                            <input id="goal" name="goal" type="text" class="validate">
                                            <label for="goal">Goal</label>
                                        </div>

                                        <div class="input-field col l6 m6 s12">

                                            <div class="switch">
                                                Personal
                                                <label>
                                                    <input type="checkbox" name="goalType">
                                                    <span class="lever"></span>
                                                </label>
                                                Organizational
                                            </div>
                                        </div>

                                        <div class="input-field col l6 m6 s12">
                                            <i class="material-icons prefix">date_range</i>
                                            <input id="deadline" name="deadline" type="text" class="datepicker">
                                            <label for="deadline">Deadline</label>
                                        </div>

                                        <div class="input-field col s12 center">
                                            <button id="submit" type="submit" class="dw-blue-1 btn waves-effect">
                                                Create
                                            </button>
                                        </div>

                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</main>
</body>
<% include ../layouts/footer.ejs %>