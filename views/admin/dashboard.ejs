<% include ../layouts/header.ejs %>
<% include ../layouts/navbar.ejs %>

<body class="bg">
<br>
<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col l4 m4 s6">
                <h5> Hello <%= sess.name %>! </h5><br>
                <div class="card">
                    <div class="card-tabs">
                        <ul class="tabs tabs-fixed-width">
                            <li class="tab dw-blue-1">
                                <a href="#user" class="left-align white-text">
                                    <i class="material-icons">person</i> <span class="tab-header"> User </span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-content">
                        <div class="row">
                            <div class="col s6 center-align">
                                <a href="/user/create" class="btn-floating btn-large waves-effect waves-light">
                                    <i class="material-icons">add</i>
                                </a>
                                <h5>Create</h5>
                            </div>
                            <div class="col s6 center-align">
                                <a href="/user/list" class="btn-floating btn-large waves-effect waves-light grey">
                                    <i class="material-icons">menu</i>
                                </a>
                                <h5>List</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col l4 m4 s6">
                <h5>&nbsp;</h5><br>
                <div class="card">
                    <div class="card-tabs">
                        <ul class="tabs tabs-fixed-width">
                            <li class="tab dw-green-1">
                                <a href="#award" class="left-align white-text">
                                    <i class="material-icons">grade</i> <span class="tab-header"> Award </span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-content">
                        <div class="row">
                            <div class="col s6 center-align">
                                <a href="/award/create" class="btn-floating btn-large waves-effect waves-light">
                                    <i class="material-icons">add</i>
                                </a>
                                <h5>Create</h5>
                            </div>
                            <div class="col s6 center-align">
                                <a href="/award/list" class="btn-floating btn-large waves-effect waves-light grey">
                                    <i class="material-icons">menu</i>
                                </a>
                                <h5>List</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col l4 m4 s12">
                <br>
                <div class="card">
                    <div class="card-content">
                        <div class="row">
                            <div class="col s12">
                                <ul class="collection">
                                    <li class="collection-item avatar">
                                        <img src="../images/user.png" alt="" class="circle">
                                        <p>Users</p>
                                        <span class="secondary-content text-dw-green-1"><%= users %></span>
                                    </li>
                                    <li class="collection-item avatar">
                                        <i class="material-icons circle red">flag</i>
                                        <p>Completed Goals</p>
                                        <span class="secondary-content text-dw-green-1"><%= goals %></span>
                                    </li>
                                    <li class="collection-item avatar">
                                        <i class="material-icons circle yellow accent-4">grade</i>
                                        <p>Awards Given</p>
                                        <span class="secondary-content text-dw-green-1"><%= awards %></span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</main>
</body>
<% include ../layouts/footer.ejs %>