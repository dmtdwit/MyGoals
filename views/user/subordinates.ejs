<% include ../layouts/header.ejs %>
<% include ../layouts/navbar.ejs %>
<body class="bg">
<main>
    <div class="container-fluid">
        <br><br>
        <div class="row">
            <div class="col l4">
                <a href="/goal/all-subordinate-goals" class="btn dw-green-1"> View All Subordinate Goals </a>
            </div>
        </div>
        <div class="row">
            <% subordinates.forEach(function(subordinate){ %>
            <div class="col l4 s12 m4">
                <div class="card">
                    <div class="card-tabs">
                        <ul class="tabs tabs-fixed-width">
                            <li class="tab dw-blue-1">
                                <a href="#subordinate" class="left-align white-text">
                                    <i class="material-icons">person</i> <span class="tab-header"> <%= subordinate.name %> </span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-content">
                        <div class="row">
                            <div class="col s12 center-align">
                                <a href="/goal/sub-list?id=<%= subordinate.id %>" class="btn-floating btn-large waves-effect waves-light">
                                    <i class="material-icons">menu</i>
                                </a>
                                <h5>View Goals</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</main>
</body>

<% include ../layouts/footer.ejs %>