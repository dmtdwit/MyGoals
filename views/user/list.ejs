<% include ../layouts/header.ejs %>
<% include ../layouts/navbar.ejs %>
<body class="bg">
<main>
    <div class="container">
    <br><br>
        <div class="row">
            <div class="col l12 s12 m12">
                <div class="card">
            <div class="card-tabs">
                <ul class="tabs tabs-fixed-width">
                    <li class="tab dw-blue-1">
                        <a href="#user" class="left-align white-text">
                            <i class="material-icons">person</i> <span class="tab-header"> All Users </span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-content">
                <div class="row">
            <div class="col l12 s12 m12">
                <table class="bordered">
                    <thead>
                        <th> S. No. </th>
                        <th> Name </th>
                        <th> Email </th>
                        <th> Category </th>
                        <th> Manager </th>
                        <th colspan="2"> Actions </th>
                    </thead>
                    <tbody>
                    <% i = 1 %>
                    <% users.forEach(function (user) { %>
                    <tr class="transparent">
                        <td> <%= i++ %> </td>
                        <td> <%= user.name %> </td>
                        <td> <%= user.email %> </td>
                        <td> <%= user.category%> </td>
                        <td>
                            <% if (user.ManagerId) { %>
                            <span id="managerOf<%= user.id %>"></span>
                            <script type="text/javascript">
                                $(document).ready(function(){
                                    getManager(<%= user.id %>);
                                });
                            </script>
                            <% } else { %>
                            <span id="managerOf<%= user.id %>"> N/A </span>
                            <% } %>
                        </td>
                        <td>
                            <a href="/user/edit?id=<%= user.id %>" class="btn-floating btn waves-effect waves-light dw-green-1">
                                <i class="material-icons">edit</i>
                            </a>
                        </td>
                        <td>
                            <a href="/user/delete?id=<%= user.id %>" class="btn-floating btn waves-effect waves-light red">
                                <i class="material-icons">delete</i>
                            </a>
                        </td>
                    </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
            </div>
        </div>
            </div>
        </div>

    </div>
</main>
</body>
<script>
    let message = '<%=message%>'
    let messageType = '<%=messageType%>'
    if (message===''||message=== null||typeof message==='undefined'){

    }else{
        displayMessage(message, messageType, 4000)
    }
</script>
