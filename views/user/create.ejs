<% include ../layouts/header.ejs %>
<% include ../layouts/navbar.ejs %>

<body class="bg">
<br><br>
<main>

    <div class="container">
        <div class="row">
            <div class="col l10 m10 s10 offset-s1 offset-m1 offset-l1">

                <div class="card">
                    <div class="card-tabs">
                        <ul class="tabs tabs-fixed-width">
                            <li class="tab dw-blue-1">
                                <a class="left-align white-text">
                                    Create new user
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-content">
                        <div id="create">
                            <div class="row">

                                <form class="col s12" action="/user/save" method="POST" autocomplete="off" onsubmit="return validateUser();">
                                    <div class="row">

                                        <div class="input-field col l6 m6 s12">
                                            <i class="material-icons prefix">account_circle</i>
                                            <input id="firstName" name="firstName" type="text" class="validate">
                                            <label for="firstName">First Name</label>
                                        </div>

                                        <div class="input-field col l6 m6 s12">
                                            <input id="lastName" name="lastName" type="text" class="validate">
                                            <label for="lastName">Last Name</label>
                                        </div>


                                        <div class="input-field col l6 m6 s12">
                                            <i class="material-icons prefix">email</i>
                                            <input id="email" type="text" name="email" class="validate">
                                            <label for="email">Email</label>
                                        </div>

                                        <div class="input-field col l6 m6 s12">
                                            <select name="address" id="address">
                                                <option> @deerwalk.edu.np </option>
                                                <option> @sifal.deerwalk.edu.np </option>
                                                <option> @deerwalkcompware.com </option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col l6 m6 s12">
                                            <select id="manager" name="manager" class="icons">
                                                <% users.forEach(function(user){
                                                    if(user.RoleId == 2) {
                                                %>
                                                <option data-icon="../profilePictures/<%=user.imageName%>" class="left circle" value="<%= user.id %>">
                                                    <%= user.name %>
                                                </option>
                                                <% }
                                                    })%>
                                            </select>
                                            <label>Manager</label>
                                        </div>

                                        <div class="input-field col l6 m6 s12 center-align">
                                            <p>
                                                <label>
                                                    <input class="with-gap" name="category" type="radio"  value="FULL_TIME" checked/>
                                                    <span>Full Time</span>
                                                </label>
                                                <label>
                                                    <input class="with-gap" name="category" type="radio"  value="PART_TIME"/>
                                                    <span>Part Time</span>
                                                </label>
                                                <label>
                                                    <input class="with-gap" name="category" type="radio"  value="INTERN"/>
                                                    <span>Intern</span>
                                                </label>
                                            </p>
                                            <br><br>
                                            <div class="switch">
                                                User
                                                <label>
                                                    <input type="checkbox" name="role">
                                                    <span class="lever"></span>
                                                </label>
                                                Admin
                                            </div>
                                        </div>

                                        <!--<div class="input-field col l6 m6 s12">-->
                                            <!---->
                                        <!--</div>-->

                                        <div class="input-field col s12 center">
                                            <button id="submit" type="submit" class="dw-blue-1 btn waves-effect">
                                                Create
                                            </button>
                                        </div>

                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</main>
</body>

<% include ../layouts/footer.ejs %>