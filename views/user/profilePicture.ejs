<% include ../layouts/header.ejs %>
<% include ../layouts/navbar.ejs %>

<body class="bg">
<br><br>
<main>
    <div class="container">
        <div class="row">
            <div class="col l10 m10 s10 offset-s1 offset-m1 offset-l1">
                <br>
                <div class="card">
                    <div class="card-tabs">
                        <ul class="tabs tabs-fixed-width">
                            <li class="tab dw-blue-1">
                                <a class="left-align white-text">
                                    Upload New Profile Photo
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-content">
                        <div id="create">
                            <div class="row">
                                <form method="post" enctype="multipart/form-data" action="/user/savePP" onsubmit="return validateProfilePicture();">
                                    <label for="profilePicture">Profile Picture</label>
                                    <div class="input-field col s12">
                                        <i class="material-icons prefix">photo</i>
                                        <input id="profilePicture" name="profilePicture" type="file" class="validate">
                                    </div>
                                    <div class="input-field col s12 center">
                                        <button id="submit" type="submit" class="dw-blue-1 btn waves-effect">
                                            Upload
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>
</body>

