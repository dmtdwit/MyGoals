<% include ../layouts/header.ejs %>
<% include ../layouts/navbar.ejs %>

<body class="bg">
<br><br>
<main>

    <div class="container">
        <div class="row">
            <div class="col l10 m10 s10 offset-s1 offset-m1 offset-l1">

                <div class="card">
                    <div class="card-tabs">
                        <ul class="tabs tabs-fixed-width">
                            <li class="tab dw-blue-1">
                                <a class="left-align white-text">
                                    Edit user
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-content">
                        <div id="edit">
                            <div class="row">

                                <form class="col s12" action="/user/update" method="POST" autocomplete="off" onsubmit="return validateUser();">
                                    <div class="row">
                                        <input type="hidden" value="<%=user.id%>" name="id" id="id"/>
                                        <div class="input-field col l6 m6 s12">
                                            <i class="material-icons prefix">account_circle</i>
                                            <input id="firstName" name="firstName" type="text" value="<%= firstName %>" class="validate">
                                            <label for="firstName">First Name</label>
                                        </div>

                                        <div class="input-field col l6 m6 s12">
                                            <input id="lastName" name="lastName" type="text" value="<%= lastName %>" class="validate">
                                            <label for="lastName">Last Name</label>
                                        </div>


                                        <div class="input-field col l6 m6 s12">
                                            <i class="material-icons prefix">email</i>
                                            <input id="email" type="text" name="email" value="<%= user.email.split('@')[0] %>" class="validate">
                                            <label for="email">Email</label>
                                        </div>

                                        <div class="input-field col l6 m6 s12">
                                            <select name="address" id="address">
                                                <% if (user.email.split('@')[1] === "deerwalk.edu.np") { %>
                                                    <option selected> @deerwalk.edu.np </option>
                                                <% } else { %>
                                                    <option> @deerwalk.edu.np </option>
                                                <% } %>
                                                <% if (user.email.split('@')[1] === "sifal.deerwalk.edu.np") { %>
                                                <option selected> @sifal.deerwalk.edu.np </option>
                                                <% } else { %>
                                                <option> @sifal.deerwalk.edu.np </option>
                                                <% } %>
                                                <% if (user.email.split('@')[1] === "deerwalkcompware.com") { %>
                                                <option selected> @deerwalkcompware.com </option>
                                                <% } else { %>
                                                <option> @deerwalkcompware.com </option>
                                                <% } %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col l6 m6 s12">
                                            <select id="manager" name="manager" class="icons">
                                                <option data-icon="../../images/user.png" class="left circle" selected> None </option>
                                                <% users.forEach(function(manager){
                                                    if((user.email!==manager.email)&&manager.RoleId!==1){
                                                %>
                                                <option data-icon="../images/user.png" class="left circle" value="<%= manager.id %>" <% if(manager.id == managerId){ %> selected="true" <%}%>>
                                                    <%= manager.name %>
                                                </option>
                                                <% }})%>
                                            </select>
                                            <label for="manager">Manager</label>
                                        </div>

                                        <div class="input-field col l6 m6 s12 center-align">
                                            <p>
                                                <label>
                                                    <% if (user.category === "FULL_TIME") { %>
                                                    <input class="with-gap" name="category" type="radio"  value="FULL_TIME" checked/>
                                                    <% } else { %>
                                                    <input class="with-gap" name="category" type="radio"  value="FULL_TIME"/>
                                                    <% } %>
                                                    <span>Full Time</span>
                                                </label>
                                                <label>
                                                    <% if (user.category === "PART_TIME") { %>
                                                    <input class="with-gap" name="category" type="radio"  value="PART_TIME" checked/>
                                                    <% } else { %>
                                                    <input class="with-gap" name="category" type="radio"  value="PART_TIME"/>
                                                    <% } %>
                                                    <span>Part Time</span>
                                                </label>
                                                <label>
                                                    <% if (user.category === "INTERN") { %>
                                                    <input class="with-gap" name="category" type="radio"  value="INTERN" checked/>
                                                    <% } else { %>
                                                    <input class="with-gap" name="category" type="radio"  value="INTERN"/>
                                                    <% } %>
                                                    <span>Intern</span>
                                                </label>
                                            </p>
                                            <br><br>
                                            <div class="switch">
                                                User
                                                <label>
                                                    <input type="checkbox" name="role">
                                                    <span class="lever"></span>
                                                </label>
                                                Admin
                                            </div>
                                        </div>

                                        <div class="input-field col s12 center">
                                            <button id="submit" type="submit" class="dw-blue-1 btn waves-effect">
                                                Update
                                            </button>
                                        </div>

                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</main>
</body>

<% include ../layouts/footer.ejs %>